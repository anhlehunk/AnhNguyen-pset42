        android:textSize="20sp"
        android:onClick="deleteTask"
        android:paddingBottom="5sp"
        android:paddingTop="5sp"
        android:layout_toLeftOf="@+id/checkBox"
        android:layout_toStartOf="@+id/checkBox"

        />


